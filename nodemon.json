{
  "watch": ["src/", "scripts/"],
  "ignore": [
    "src/**/*.generated.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "dist/",
    "node_modules/"
  ],
  "ext": "ts,tsx,js,json,css",
  "exec": "bun scripts/smart-restart.js $FILENAME",
  "env": {
    "NODE_ENV": "development"
  },
  "signal": "SIGKILL",
  "killTimeout": 5000,
  "verbose": true,
  "stdout": true
}
